<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<com.google.android.material.appbar.MaterialToolbar
    app:title="Klasifikasi Penyakit Ginjal"
    android:id="@+id/toolbar"
    app:titleCentered="true"
    android:background="@color/purple"
    app:titleTextColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="106dp"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/btn_unggah"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="121dp"
        android:text="Unggah dan Prediksi Gambar" />

    <TextView
        android:id="@+id/txt_hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_unggah"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="228dp"
        android:text=" "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_hasil2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_unggah"
        android:layout_alignParentStart="true"
        android:layout_marginStart="79dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="84dp"
        android:text="Hasil Prediksi: "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_probabilitas"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_hasil"
        android:layout_alignStart="@+id/txt_hasil"
        android:layout_alignEnd="@+id/txt_hasil"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="-67dp"
        android:layout_marginBottom="187dp"
        android:text=" "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_probabilitas2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_hasil"
        android:layout_alignStart="@+id/txt_hasil2"
        android:layout_alignEnd="@+id/txt_hasil2"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="186dp"
        android:text="Probabilitas: "
        android:textStyle="bold" />


</RelativeLayout>
